# ==============================================
# GEMINI AI CONFIGURATION (REQUIRED)
# ==============================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# ==============================================
# TWITTER/X API CONFIGURATION (OPTIONAL)
# ==============================================
# Get these from: https://developer.twitter.com/en/portal/dashboard
# You need Twitter API v2 access with Read and Write permissions
API_KEY=YOUR_TWITTER_API_KEY
API_KEY_SECRET=YOUR_TWITTER_API_KEY_SECRET
ACCESS_TOKEN=YOUR_TWITTER_ACCESS_TOKEN
ACCESS_TOKEN_SECRET=YOUR_TWITTER_ACCESS_TOKEN_SECRET
TWITTER_CLIENT_ID=YOUR_TWITTER_CLIENT_ID
TWITTER_CLIENT_SECRET=YOUR_TWITTER_CLIENT_SECRET
TWITTER_REDIRECT_URI=http://localhost:3000/callback
APP_id=YOUR_TWITTER_APP_ID
BEARER_TOKEN=YOUR_TWITTER_BEARER_TOKEN

# ==============================================
# HASHNODE API CONFIGURATION (OPTIONAL)
# ==============================================
# Get your token from: https://hashnode.com/settings/developer
HASHNODE_API_TOKEN=YOUR_HASHNODE_API_TOKEN
# Optional: Specify publication ID, otherwise uses default
HASHNODE_PUBLICATION_ID=YOUR_HASHNODE_PUBLICATION_ID
# Set to false to create drafts instead of publishing immediately
HASHNODE_AUTO_PUBLISH=true

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Set to 'production' for production deployment
NODE_ENV=development

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# Run immediately on startup (useful for testing)
RUN_IMMEDIATELY=false

# Port for health check endpoint (for hosting platforms)
PORT=3000

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================
# For Vercel deployment
VERCEL_PROJECT_ID=YOUR_VERCEL_PROJECT_ID

# For Render deployment  
RENDER_SERVICE_ID=YOUR_RENDER_SERVICE_ID

# ==============================================
# ADVANCED CONFIGURATION (OPTIONAL)
# ==============================================
# Custom scheduling (cron format) - default is every 6 hours
# CRON_SCHEDULE=0 */6 * * *

# Maximum retries for API calls
# MAX_RETRIES=3

# Rate limiting (requests per minute)
# RATE_LIMIT_RPM=60
